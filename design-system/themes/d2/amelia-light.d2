# Amelia Light Theme
# Usage: Copy vars block to your diagrams

vars: {
  background: "#FDF8F0"
  surface: "#FFFDF9"
  text: "#1A2F23"
  accent: "#2E6B9C"
  green: "#3D7A5A"
  blue: "#5B9BD5"
  muted: "#5C7263"
}

# Example usage in diagram nodes:
# my-node: {
#   style: {
#     fill: ${surface}
#     stroke: ${accent}
#     font-color: ${text}
#   }
# }
#
# Example usage for containers:
# container: {
#   style: {
#     fill: ${background}
#     stroke: ${green}
#   }
#   inner-node: {
#     style: {
#       fill: ${surface}
#       stroke: ${accent}
#       font-color: ${text}
#     }
#   }
# }
#
# Example usage for connections:
# node-a -> node-b: {
#   style: {
#     stroke: ${blue}
#   }
# }
