# Copy this file to settings.amelia.yaml and customize for your environment
active_profile: local_haiku

profiles:
  local_haiku:
    name: local_haiku
    driver: cli:claude
    model: haiku
    validator_model: haiku
    tracker: noop
    working_dir: /path/to/your/repo

  local_sonnet:
    name: local_sonnet
    driver: cli:claude
    model: anthropic:sonnet
    validator_model: anthropic:haiku
    tracker: noop
    working_dir: /path/to/your/repo

  local_opus:
    name: local_opus
    driver: cli:claude
    model: opus
    validator_model: anthropic:haiku
    tracker: noop
    working_dir: /path/to/your/repo

  api_minimax_m2:
    name: api_minimax_m2
    driver: api:openrouter
    model: minimax/minimax-m2
    validator_model: anthropic:haiku
    tracker: noop
    working_dir: /path/to/your/repo
